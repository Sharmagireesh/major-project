<% layout('layout/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1 class="mb-4"><%= listing.title %></h1>
        <div class="card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text"><strong>Owned By:</strong><i><%= listing.owner.username %></i></p>
                <p class="card-text"><strong>Description:</strong> <%= listing.description %></p>
                <p class="card-text"><strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
                <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>
                <div class="d-flex justify-content-between mt-3">
                    <a href="/listings" class="btn btn-secondary">Back to Listings</a>
                    <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
            </div>
        </div>
    </div>

    <% if (currentUser){%>
    <div class="col-8 offset-2 mt-3">
        <hr>
        <h4> Leave a review: </h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating </label>
            <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset> 
            </div>
            <div class="mb-3 mt-3">
                <label for ="comment" class="form-label"">Comment</label>
                <textarea name="review[comment]" required rows="5" cols="30" id="comment" class="form-control"></textarea>
                <div class="invalid-feedback">Please provide some comments for review</div>
            </div>
            <div class="mb-3 mt-3">
                <br>
                <button class="btn btn-outline-dark">Submit Review</button>
            </div>
        </form>
    <% } %>
        <hr>
        
        <p><b> Reviews:</b> </p>
        <div class="row">
        <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-2 mb-3 ">
                <div class="card-body">
                    <h5 class="card-title mt-3"><%= review.author.username %></h5>
                    <p class="starability-result card-text mt-3" data-rating="<%= review.rating %>"></p>
                    <p class="card-text mt-3">Comment: <%= review.comment %></p>
                </div>
                <div>
                <form class="mb-3 mt-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-danger btn-sm">Delete Review</button>
                </form>
                </div>

            </div>
            <% } %>
        </div>
    </div>
</div>
