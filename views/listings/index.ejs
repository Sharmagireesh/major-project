<% layout('layout/boilerplate') %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter {
        text-align: center;
        margin-right: 3rem;
        margin-top: 2rem;
        margin-left: 1rem;
        opacity: 0.7;
        text-decoration: none;
        color: inherit;

    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter.active {
        opacity: 1;
        font-weight: bold;
    }
    .filter p{
        font-size: 0.5rem;
    }
    .tax-info{
        display:none;

    }
    .tax-toggle{
        border : 1px solid lightgrey;
        border-radius: 1rem;
        height: 3.2rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center
    }
</style>
<div id="filters">
    
    <a href="/listings?category=Trending" class="filter <%= category === 'Trending' ? 'active' : '' %>">
        <div><i class="fa-solid fa-fire "></i></div>
        <p>Trending</p>
    </a>
    <a href="/listings?category=Rooms" class="filter <%= category === 'Rooms' ? 'active' : '' %>">
        <div><i class="fa-solid fa-bed "></i></div>
        <p>Rooms</p>
    </a>
    <a href="/listings?category=Vibrant%20Hubs" class="filter <%= category === 'Vibrant Hubs' ? 'active' : '' %>">
        <div><i class="fa-solid fa-city" ></i></div>
        <p>Vibrant Hubs</p>
    </a>
    <a href="/listings?category=Castles" class="filter <%= category === 'Castles' ? 'active' : '' %>">
        <div><i class="fa-solid fa-landmark"></i></div>
        <p>Castles</p>
    </a>
    <a href="/listings?category=Beaches" class="filter <%= category === 'Beaches' ? 'active' : '' %>">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
    </a>
    <a href="/listings?category=Park" class="filter <%= category === 'Park' ? 'active' : '' %>">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Park</p>
    </a>
    <a href="/listings?category=Family-Friendly" class="filter <%= category === 'Family-Friendly' ? 'active' : '' %>">
        <div><i class="fa-solid fa-people-roof"></i></div>
        <p>Family-Friendly</p>
    </a>
    <a href="/listings?category=Great%20views" class="filter <%= category === 'Great views' ? 'active' : '' %>">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Great views</p>
    </a>
    <div class="tax-toggle mt-3">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-1">
        <% for(let listing of alllistings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="col">
                <div class="card h-100 listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
                    <div class="card-img-overlay"> Wanderlust</div>
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text">
                            <strong>Price:</strong> &#8377;<%= listing.price %> /Night <i class="tax-info"> &nbsp;&nbsp;+18%GST</i><br>
                            <strong>Location:</strong> <%= listing.location %><br>
                        </p>
                    </div>
                </div>
            </div>
            </a>
        <% } %>
    </div>
</div>
<script> 
let taxSwitch = document.getElementById('switchCheckDefault');
taxSwitch.addEventListener('click', () =>{
    let taxInfo = document.getElementsByClassName('tax-info');
    for(info of taxInfo){
        if(taxSwitch.checked){
            info.style.display = 'inline';
        } else {
            info.style.display = 'none';
        }
    }

    

})
</script>
